{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>lewtec/renovate-config:base"
  ],
  "lockFileMaintenance": {
    "automerge": true,
    "automergeType": "pr",
    "enabled": false,
    "recreateWhen": "always"
  },
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": [
        "patch"
      ]
    }
  ]
}
